<h1>Subir Fichero</h1>

<form method="post"
	  enctype="multipart/form-data">
	<label>Selecciona un fichero</label>
	<input type="file" name="fichero" class="form-control" />
	<button class="btn btn-info">
		Subir fichero
	</button>
</form>

<h5 style="color:red">@ViewData["MENSAJE"]</h5>

<img src='@ViewData["URL"]'
style="width:450px; height:300px;" />
